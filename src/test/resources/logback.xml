<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.digitalasset.nanobot" level="INFO" />
    <logger name="com.digitalasset.nanobot.sample" level="INFO" />
    <logger name="com.digitalasset.ledger" level="INFO"/>
    <logger name="test-akka" level="ERROR"/>

    <!-- STDOUT and FILE appender both have different log levels, see above -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>